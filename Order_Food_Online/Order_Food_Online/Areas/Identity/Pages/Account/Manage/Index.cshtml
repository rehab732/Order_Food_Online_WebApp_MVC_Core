@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="profile-form" method="post" enctype="multipart/form-data">

<div class="row">
    <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.FirstName" class="form-label"></label>
                <input asp-for="Input.FirstName" class="form-control" placeholder="Please choose your username."  />
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.LastName" class="form-label"></label>
                <input asp-for="Input.LastName" class="form-control" placeholder="Please choose your username."  />
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Age" class="form-label"></label>
                <input asp-for="Input.Age" class="form-control" placeholder="Please choose your username."  />
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.CardNum" class="form-label"></label>
                <input asp-for="Input.CardNum" class="form-control" placeholder="Please choose your username." />
            </div>
       
            <div class="form-floating mb-3">
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
    </div>
    <div class="col-md-6">
        <div class="form-floating">
            <label asp-for="Input.ProfilePicture" class="w-100"></label>
            @if(Model.Input.ProfilePicture!=null)
            {
                    <img id="profpic" alt="Profile" class="profilepic" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))" />
                }else
                {
                    <img id="profpic" alt="Profile" class="profilepic" src="~/images/1.jpg" />
                    <!--law 3ayza n3adel fe el style haykoon fy site.css-->
                }
               <div class="custom-file mt-2" >
                <input type="file"
                    accept="image/*"
                    asp-for="Input.ProfilePicture"
                    class="custom-file-input"
                           onchange="document.getElementById('profpic').src=window.URL.createObjectURL(this.files[0])" />
                    <label class="custom-file-label" asp-for="Input.ProfilePicture"> Chosse Image**</label>
                    <span asp-asp-validation-for="Input.ProfilePicture" class="text-danger"></span>

            </div>
        </div>
    </div>
</div>
        </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
